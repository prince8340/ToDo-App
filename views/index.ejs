<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Todo App Nodejs</title>
  <link rel="icon" type="image/svg+xml" href="/images/t-logo.jpg">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <div class="container">
    <div class="row justify-content-between">
      <div class="col-md-12">
        <h4 class="text-center mt-3 text-success" style="color: rgb(11, 93, 42)">Todo App NodeJS</h4>
      </div>
    </div>

    <!-- Todo App -->
    <div class="row d-flex justify-content-center">
      <div class="col-md-10">
        <div class="modal-dialog">
          <div class="modal-content border-danger">
            <div class="modal-header">
              <h5 class="modal-title text-danger">Todo App</h5>
            </div>
            <div class="modal-body">
              <form class="mt-1" action="/tasks" method="post" id="task-form">
                <!-- Input field for task description -->
                <div class="mb-3">
                  <label for="description" class="form-label">Description</label>
                  <input type="text" class="form-control" id="description" name="description" aria-describedby="description"
                    required>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="category" class="form-label">Category</label>
                      <select class="form-select form-select-md mb-3" name="category" aria-label=".form-select-md example"
                        required>
                        <option value="" selected disabled>Choose a category</option>
                        <option value="Personal">Personal</option>
                        <option value="Work">Work</option>
                        <option value="School">School</option>
                        <option value="College">College</option>
                        <option value="Office">Office</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="date" class="form-label">Date</label>
                      <input type="date" class="form-control" id="date" name="date" aria-describedby="date" required>
                    </div>
                  </div>
                </div>

                <div class="modal-footer d-flex justify-content-center">
                  <button type="button" class="btn btn-secondary" onclick="addTask()">
                    <i class="bi bi-plus-lg me-3 fw-bolder"></i>ADD TASK
                  </button>
                </div>
              </form>

              <button class="btn btn-danger" onclick="deleteTasks()">
                <i class="bi bi-trash me-3 fw-bolder"></i>Delete Tasks
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Todo List Show -->
    <div class="row d-flex justify-content-center">
      <div class="col-md-8">
        <ul id="task-list">
          <!-- Task list display will be appended here -->
        </ul>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <script>
    const tasks = []; // Array to store tasks

    function addTask() {
      const taskForm = document.getElementById("task-form");
      const taskList = document.getElementById("task-list");

      // Get values from the form
      const description = taskForm.elements.description.value;
      const category = taskForm.elements.category.value;
      const date = taskForm.elements.date.value;

      // Add task to the array
      tasks.push({ description, category, date });

      // Create a new list item
      const listItem = document.createElement("li");
      listItem.textContent = `${description} - ${category} - ${date}`;

      // Append the list item to the task list
      taskList.appendChild(listItem);

      // Clear the input fields
      taskForm.elements.description.value = "";
      taskForm.elements.category.value = "";
      taskForm.elements.date.value = "";
    }

    function deleteTasks() {
      const taskList = document.getElementById("task-list");
      taskList.innerHTML = ""; // Remove all list items

      // Clear the tasks array
      tasks.length = 0;
    }
  </script>

</body>

</html>
